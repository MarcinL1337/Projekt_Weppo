<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="checkout" class="alert alert-success" {{#if noCheckoutMsg}}hidden{{/if}}>
            {{ checkoutMsg }}
        </div>
        <div id="notLoggedIn" class="alert alert-danger" {{#if noNotLoggedInMsg}}hidden{{/if}}>
            {{ notLoggedInMsg }}
        </div>
    </div>
</div>


<div class="row">
  {{#each products}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="{{this.imagePath}}" alt="..." class="img-responsive" />
        <div class="caption">
          <h3 class="product-title">{{this.title}}</h3>
          <p class="description">
            {{this.description}}
          </p>
          <div class="clearfix">
            <div class="price pull-left">{{this.price}} z≈Ç</div>
            <a
              href="/add-to-cart/{{this._id}}"
              class="btn btn-default pull-right btn-success"
              role="button"
            >Add to cart</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>